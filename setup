#!/bin/env sh

mkdir $HOME/.config
mkdir -p $HOME/.local/share

rm -rf $HOME/{.zshrc,.bashrc,.profile,.login}

ln -sv $HOME/documents/batcave/dotfiles/.local/myBin/ $HOME/.login/bin/

for i in $(ls $HOME/documents/batcave/dotfiles/.config); do
    rm -rf $HOME/.config/$i &&
        ln -sv $HOME/documents/batcave/dotfiles/.config/$i/ $HOME/.config/
done
