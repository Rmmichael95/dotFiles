CC=zig cc
RM=rm -rf
LIBS=-lm
# flags
LDFLAGS=
CFLAGS=-g -Wall
# target dirs
OBJDIR=obj
SRCDIR=src
RECDIR=rec
# executable name
TARGET=main

MKDIR=@mkdir -p
DIR_GUARD=$(MKDIR) $(@D)

SRCT=*.[ch]
RECT=*.txt

DEBUG ?= 1

ifeq ($(DEBUG),1)
	LDFLAGS +=-DLOG_LEVEL=DEBUG_LEVEL -O0 -ggdb
	CFLAGS +=-Wall -Wconversion -Wnarrowing -Wextra -pedantic
else
	CFLAGS  +=-Ofast -g
endif

SRCS=$(wildcard $(SRCDIR)/*.c)
OBJS=$(addprefix $(OBJDIR)/, $(notdir $(SRCS:.c=.o)))
RECS=$(wildcard $(RECT))

all: $(TARGET)

$(TARGET): $(OBJS)
	@echo [INFO] Creating executable [$(TARGET)]
	@$(CC) $(LDFLAGS) $(CFLAGS) $(OBJS) -o $(TARGET) $(LIBS)

$(OBJDIR)/%.o: $(SRCDIR)/%.c
	$(DIR_GUARD)
	@echo [C] $<
	@$(CC) $(LDFLAGS) $(CFLAGS) -c -o $@ $<

clean:
	@echo "[Cleaning]"
	@$(RM) $(OBJS)

dist-clean: clean
	@$(RM) $(TARGET)

dir: $(SRCDIR)

$(SRCDIR): $(RECDIR)
ifeq ($(SRCT),)
else
	@echo [INFO] Handling SAUCE [$(SRCT)]
	@$(MKDIR) $(SRCDIR)
	@mv $(SRCT) $(SRCDIR)
endif

$(RECDIR):
ifeq ($(RECS),)
else
	@echo [INFO] Handling reSAUCEs [$(RECT)]
	@$(MKDIR) $(RECDIR)
	@mv $(RECS) $(RECDIR)
endif
